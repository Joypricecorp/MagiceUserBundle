{% extends "MagiceUserBundle::layout.html.twig" %}

{% block mg_user_content %}

    <form action="{{ path('mg_user_resetting_send_email') }}" method="POST">
        <div>
            {% if invalid_username is defined %}
                <p>{{ '_mg.user.resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
            {% endif %}

            <label for="username">{{ '_mg.user.resetting.request.username'|trans }}</label>
            <input type="text" id="username" name="username" required="required" />
        </div>
        <div>
            <input type="submit" value="{{ '_mg.user.resetting.request.button.submit'|trans }}" />
        </div>
    </form>
{% endblock mg_user_content %}
